{
  "name": "openctl",
  "version": "0.1.0",
  "description": "CLI for uploading and managing Claude Code sessions",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "openctl": "./cli/index.ts"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch run index.ts",
    "cli": "bun run ./cli/index.ts",
    "upload": "bun run ./cli/index.ts upload",
    "build:cli": "bun run scripts/build-cli.ts",
    "build:cli:test": "bun run scripts/build-cli.ts --test",
    "build:cli:release": "bun run scripts/build-cli.ts --archive"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@pierre/diffs": "^1.0.4",
    "bun-plugin-tailwind": "^0.1.2",
    "tailwindcss": "^4.1.18"
  }
}
