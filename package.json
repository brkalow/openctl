{
  "name": "openctl",
  "version": "0.1.0",
  "description": "CLI for uploading and managing Claude Code sessions",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "openctl": "./cli/index.ts"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch run index.ts --",
    "cli": "bun run ./cli/index.ts",
    "upload": "bun run ./cli/index.ts upload",
    "build:cli": "bun run scripts/build-cli.ts",
    "build:cli:test": "bun run scripts/build-cli.ts --test",
    "build:cli:release": "bun run scripts/build-cli.ts --archive",
    "seed": "bun run scripts/seed.ts",
    "test": "bun test"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "@types/bun": "latest",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clerk/backend": "^3.0.0-canary.v20260116220951",
    "@clerk/react": "^6.0.0-canary.v20260116220951",
    "@pierre/diffs": "^1.0.4",
    "bun-plugin-tailwind": "^0.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "tailwindcss": "^4.1.18"
  }
}
